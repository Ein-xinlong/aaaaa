<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DeliveryTabText">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="DeliveryTextInfo">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/delivery_text_grey</item>
    </style>

    <style name="DeliveryBottomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:layout_marginBottom">11dp</item>
        <item name="android:background">@drawable/ripple_bg_button</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/ic_color_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>